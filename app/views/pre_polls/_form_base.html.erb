<%= bootstrap_form_for [pre_poll] do |f| %>
  <% 
    create_class_str = 'col-4 btn btn-sm btn-primary'
    update_class_str = 'col-4 btn btn-sm btn-secondary'
  %>
  <div class="container">
    <div class="col">
      <div class="col-12 form-label">
        <div> 
          <%= f.text_area :content, style: "width:100%", rows: "8" %>
        </div>
      </div>
      <div class="row">
        <%= f.submit name:"btn", value: "生成", class: "#{create_class_str}"  , id: pre_poll.id %>
        <%= f.submit name:"btn", value: "更新", class: "#{update_class_str}"  , id: pre_poll.id %>
      </div>
    </div>
  </div>
<% end %>
